{% extends 'base.html.twig' %}

{% block title %}Products index
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-12">
			<a href="{{ path('app_products_new') }}">
				<button class="btn btn-success">Thêm</button>
			</a>
			<div class="card">
				<div class="card-content">
					<h2>
						Quản lý sản phẩm
					</h2>
					<div class="row" style="height:100%;">

						<table class="table">
							<thead>
								<tr>
									<th>Id</th>
									<th>Tên</th>
									<th>Ảnh</th>
									<th>Thông tin</th>
									<th>Giá</th>
									<th>Điểm</th>
									<th>Điểm tặng</th>
									<th>Sửa</th>
									<th>Xóa</th>
								</tr>
							</thead>
							<tbody>
								{% for product in products %}
									<tr>
										<td>{{ product.id }}</td>
										<td>{{ product.name }}</td>
										{% if(product.image) %}
										<td><img src="{{asset('uploads/images/' ~ product.image)}}" style="height: 100px;width:200px;" alt=""></td>
										{% else %}
										<td></td>
										{% endif %} 
										<td>{{ product.info }}</td>
										<td>{{ product.price }}</td>
										<td>{{ product.point }}</td>
										<td>{{ product.pointGive }}</td>
										<td>
											<a href="{{ path('app_products_edit', {'id': product.id}) }}">
												<button class="btn btn-success">Sửa</button> 
											</a>
										</td>
                                        <td>
											<form method="post" action="{{ path('app_products_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
												<button class="btn btn-danger">Delete</button>
											</form>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="8">no records found</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
						<div class="navigation">
							{{ knp_pagination_render(products) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
