{% extends 'base.html.twig' %}

{% block title %}Admins index{% endblock %}

{% block body %}
    <h1>Admins index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <td>{{ admin.id }}</td>
                <td>{{ admin.name }}</td>
                <td>{{ admin.email }}</td>
                <td>{{ admin.password }}</td>
                <td>{{ admin.phone }}</td>
                <td>{{ admin.address }}</td>
                <td>{{ admin.role }}</td>
                <td>
                    <a href="{{ path('app_admins_show', {'id': admin.id}) }}">show</a>
                    <a href="{{ path('app_admins_edit', {'id': admin.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admins_new') }}">Create new</a>
{% endblock %}
